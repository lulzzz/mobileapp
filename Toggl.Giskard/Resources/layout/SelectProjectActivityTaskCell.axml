<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="1dp"
    android:background="@color/lightGray"
    android:layout_height="48dp"
    android:layout_width="match_parent">
    <TextView
        local:MvxBind="Text Name"
        android:maxLines="1"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/defaultEditText"
        tools:text="Superday landing page Superday landind sda fsad sd fsa df asdf g page Superday landing page Superday landing page"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|left" />
    <View
        android:background="@color/separator"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent" />
    <View
        android:visibility="visible"
        android:background="@drawable/TransparentToWhiteGradient"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />
</RelativeLayout>
